<Window x:Class="MyWfpDome.View.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:View="clr-namespace:MyWfpDome.View"
        xmlns:ViewModel="clr-namespace:MyWfpDome.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance ViewModel:StudentViewModel}"
        Title="UserView" Height="300" Width="400">
    <Window.DataContext>
        <ViewModel:StudentViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Width="50" Height="30" Command="{Binding ButtonCommand}" CommandParameter="900">点击</Button>
    </Grid>
</Window>
